# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=safe_access_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT 密钥 (请使用强密码)
JWT_SECRET=your_jwt_secret_key_here

# 管理员密码
ADMIN_PASSWORD=your_admin_password_here

# Next.js 配置
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 可选：启用调试模式
# DEBUG=true

# 配置系统设置
# 工作类型选项（逗号分隔）
WORK_TYPE_OPTIONS=quality_rework,product_work,maintenance,inspection,other

# 危险作业类型选项（逗号分隔）
DANGER_TYPE_OPTIONS=high_altitude,confined_space,hot_work,electrical,chemical,radiation,lifting,excavation

# 作业依据选项（逗号分隔）
WORK_BASIS_OPTIONS=ncr,design_change,nonconformity,maintenance_plan,inspection_plan

# 部门选项（逗号分隔）
DEPARTMENT_OPTIONS=quality,production,maintenance,engineering,safety,administration

# 职位选项（逗号分隔）
POSITION_OPTIONS=engineer,technician,supervisor,manager,operator,inspector

# ==================== 日志记录配置 ====================
# 日志级别: error, warn, info, debug
LOG_LEVEL=info

# 日志存储目录
LOG_DIR=./logs

# 应用版本（用于日志标识）
APP_VERSION=1.0.0

# ==================== 监控配置 ====================
# 健康检查间隔（毫秒）
HEALTH_CHECK_INTERVAL=60000

# 指标收集间隔（毫秒）
METRICS_COLLECTION_INTERVAL=60000

# ==================== 告警配置 ====================
# 告警Webhook地址（多个用逗号分隔）
# 钉钉机器人: https://oapi.dingtalk.com/robot/send?access_token=xxx
# 企业微信机器人: https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx
ALERT_WEBHOOKS=

# 邮件告警配置
ALERT_EMAIL_SMTP_HOST=smtp.example.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=alerts@example.com
ALERT_EMAIL_PASS=your_email_password
ALERT_EMAIL_TO=admin@example.com,ops@example.com

# ==================== 性能阈值配置 ====================
# 慢请求阈值（毫秒）
SLOW_REQUEST_THRESHOLD=1000

# 慢查询阈值（毫秒）
SLOW_QUERY_THRESHOLD=200

# 内存使用率告警阈值（百分比）
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=90

# CPU使用率告警阈值（百分比）
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=90

# 磁盘使用率告警阈值（百分比）
DISK_WARNING_THRESHOLD=85
DISK_CRITICAL_THRESHOLD=95

# ==================== 错误处理配置 ====================
# 最大重试次数
MAX_RETRY_ATTEMPTS=3

# 重试延迟（毫秒）
RETRY_DELAY=1000

# 断路器失败阈值
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# 断路器重置超时（毫秒）
CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# ==================== 外部服务配置 ====================
# 外部API超时时间（毫秒）
EXTERNAL_API_TIMEOUT=30000

# 外部API重试次数
EXTERNAL_API_RETRY_ATTEMPTS=3

# ==================== 监控面板配置 ====================
# Grafana面板地址
GRAFANA_URL=http://localhost:3001

# Prometheus地址
PROMETHEUS_URL=http://localhost:9090

# ==================== 错误追踪配置（可选）====================
# Sentry DSN（用于错误追踪）
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# ==================== 日志聚合服务（可选）====================
# ELK Stack Elasticsearch地址
# ELK_ENDPOINT=http://localhost:9200

# Grafana Loki地址
# LOKI_ENDPOINT=http://localhost:3100

# ==================== 维护模式 ====================
# 维护模式开关
MAINTENANCE_MODE=false

# 维护模式提示信息
MAINTENANCE_MESSAGE=系统维护中，请稍后访问

# ==================== 调试配置 ====================
# SQL查询调试
DEBUG_SQL=false

# Redis操作调试
DEBUG_REDIS=false

# HTTP请求调试
DEBUG_HTTP=false