{
  "name": "safe-access-portal",
  "version": "1.0.0",
  "description": "安全作业申请系统 - 现代化的安全作业申请管理平台",
  "private": true,
  "author": "Safe Access Team",
  "license": "MIT",
  "keywords": [
    "safety",
    "application",
    "management",
    "nextjs",
    "typescript",
    "postgresql"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "config:validate": "node scripts/validate-config.js",
    "config:show": "node -e 'process.stdout.write(JSON.stringify(require(\"./lib/config\").getConfig(), null, 2) + \"\\n\")'",
    "config:migrate": "node scripts/migrate-config.js",
    "dev:setup": "./scripts/dev.sh setup",
    "dev:start": "./scripts/dev.sh start",
    "dev:install": "./scripts/dev.sh install",
    "db:init": "./scripts/dev.sh db-init",
    "deploy": "./scripts/deploy.sh",
    "deploy:docker": "./scripts/deploy.sh docker",
    "deploy:local": "./scripts/deploy.sh local",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "health": "curl -f http://localhost:3000/health || echo 'Health check failed'",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:clean": "rm -rf logs/*.log",
    "monitor:start": "node scripts/monitor.js",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "clean:all": "rm -rf .next out dist node_modules"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-toast": "^1.1.5",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "csv-parser": "^3.0.0",
    "framer-motion": "^10.16.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "next": "14.0.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "react": "^18",
    "react-dom": "^18",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20",
    "@types/pg": "^8.10.7",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "@types/winston": "^2.4.4",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
